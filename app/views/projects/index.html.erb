<div class="container-fluid w-100 h-100vh h-100 bg-darkblue">
    <%= header_two('projects') %>

    <%= no_project(@projects) %>
  <div class="row">
    <div class="col-6 mx-auto text-center">

      <%# <%= image_tag @user.image, class: 'user-show-image text-center mt-5'%>

      <%# <h4 class="h1 text-white"> <%= current_user.name %> 
    </div>
  </div>

  <div class="row">
    <div class="col-6 mx-auto text-center d-flex flex-column align-items-center">

      <% @projects.each do |project| %>
      <% next if project.name == 'None'%>
      <%= link_to project_path(project) do %>
          <div class="d-flex justify-content-center flex-column border-bottom">
          <p class='text-white h5 '> <%= project.name %> </p> 
            <%= link_to 'delete', project_path(project), class: 'text-white h6 sm-h5', method: :delete, data: { confirm: "Are you sure you want to delete this group and all tasks that belongs to it?" }%>

          </div>


        <% end %>
      <% end %>
    </div>
  </div>

<div class="row">
  <div class="col-12">
    <%= link_to "Add new", new_project_path, class: 'btn btn-success w-100'%>
  </div>
</div>
</div>
